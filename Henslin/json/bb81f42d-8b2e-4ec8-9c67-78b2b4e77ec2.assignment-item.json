              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "No one can live outside history."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Historical events are merely perceived realities."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Personalities are determined by external forces."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Individual behaviors cause society to evolve."
                }
              ]
            },
            "answerKey": {
