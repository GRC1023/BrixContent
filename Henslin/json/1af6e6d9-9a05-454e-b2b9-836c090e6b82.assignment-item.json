            "config": {
              "id": "QUE59341",
              "question": "How do symbolic interactionists interpret the advent of the term “sexual harassment” in the 1970s?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Behaviors once considered a normal, if often unwelcome, aspect of work relationships were no longer acceptable."
                },
                {
                  "answerKey": "answer_2",
                  "content": "The term itself contributed to the rise of problems in the workplace that did not exist before it came into use."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Prior to the 1970s, sexual harassment did not exist; new behaviors required new language."
                },
                {
                  "answerKey": "answer_4",
                  "content": "The Supreme Court introduced the phrase to manipulate workplace legislation."
                }
              ]
            },
