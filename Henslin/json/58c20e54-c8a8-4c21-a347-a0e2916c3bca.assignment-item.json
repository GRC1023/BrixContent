            "config": {
              "id": "QUE65248",
              "question": "Why is the number of hours per week that U.S. husbands currently do housework significant?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Because it shows that men are becoming more compassionate and sensitive and are socialized to be more like women."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Because it shows that more men are working in the home rather than outside it, gradually leaving the workforce."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Because it shows that men are taking more responsibility for maintaining their relationships, and they are more concerned about pleasing their wives."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Because it represents a change in traditional gender roles, and gendered labor division is becoming more equal."
