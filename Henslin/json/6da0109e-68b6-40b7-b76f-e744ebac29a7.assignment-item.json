              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "You are likely to get annoyed with each other’s behavior."
                },
                {
                  "answerKey": "answer_2",
                  "content": "You are a loosely formed collection of people with very little interaction."
                },
                {
                  "answerKey": "answer_3",
                  "content": "You will maintain long-term relationships."
                },
                {
                  "answerKey": "answer_4",
                  "content": "You do not have cultural backgrounds in common."
                }
              ]
            },
