              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "His friends"
                },
                {
                  "answerKey": "answer_2",
                  "content": "The students in his classes"
                },
                {
                  "answerKey": "answer_3",
                  "content": "His coworkers"
                },
                {
                  "answerKey": "answer_4",
                  "content": "The people he meets at clubs"
                }
