              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "digressing from the problem at hand"
                },
                {
                  "answerKey": "answer_2",
                  "content": "approaching an issue in opposing ways"
                },
                {
                  "answerKey": "answer_3",
                  "content": "conforming, leading to a narrow view of an issue"
                },
                {
                  "answerKey": "answer_4",
                  "content": "making decisions by over-thinking an issue"
