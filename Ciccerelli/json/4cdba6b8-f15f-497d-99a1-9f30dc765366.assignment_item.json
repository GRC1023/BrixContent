            "config": {
              "id": "QUE57070",
              "question": "In Loftus’s 1978 study, subjects viewed a slide presentation of an accident. Later, some of the subjects were asked a question about a yield sign when the actual slides contained pictures of a stop sign. When presented with this inaccurate information, how did these subjects typically respond?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Most corrected Loftus and recalled seeing a stop sign."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Many began seeing both a stop sign and a yield sign."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Many subjects’ overall accuracy dropped when confronted with conflicting information."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Subjects were confused, but only briefly, at which point their accuracy of recalling the event returned."
                }
              ]
