            "config": {
              "id": "QUE61249",
              "question": "An amendment to a joint resolution, offered by Colorado Senator Henry M. Teller, pledged that the United States __________.\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "had no intention of annexing Cuba"
                },
                {
                  "answerKey": "answer_2",
                  "content": "had not planned to expel the Spanish from Cuba"
                },
                {
                  "answerKey": "answer_3",
                  "content": "would attempt to annex Cuba"
                },
                {
                  "answerKey": "answer_4",
                  "content": "would create a democratic government in Cuba"
                }
              ]
            },
            "answerKey": {
              "assessmentType": "multiplechoice",
              "answers": {
                "answer_3": {
                  "score": 0.0,
                  "response": "On April 19, 1898, Congress passed a joint resolution declaring Cuba independent and authorizing the president to use the army and navy to expel the Spanish from it. An amendment, offered by Colorado Senator Henry M. Teller, pledged that the United States had no intention of annexing Cuba."
                },
                "answer_2": {
