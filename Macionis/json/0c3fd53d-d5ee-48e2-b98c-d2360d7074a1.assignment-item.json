            "config": {
              "id": "QUE57583",
              "question": "How do Piaget’s and Freud’s views on human development differ?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Freud believed that people were passive in their own development, while Piaget thought that they were active in their growth."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Piaget believed that biology and culture created conflict in personality development, while Freud believed that nature and nurture worked in harmony."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Piaget focused on the sensory aspect of development, while Freud focused on the growth of creativity."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Freud considered a personality fully developed when a person could think abstractly, while Piaget believed that a person’s growth was finalized when he or she accepted sublimation."
                }
              ]
            },
            "answerKey": {
              "assessmentType": "multiplechoice",
              "answers": {
