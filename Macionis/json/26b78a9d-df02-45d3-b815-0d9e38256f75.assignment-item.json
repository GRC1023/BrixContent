            "config": {
              "id": "QUE57868",
              "question": "What evidence exists to contradict Karl Marx’s claims concerning the inevitable overthrow of capitalism?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "The vast difference in wealth held by the rich and the poor in capitalist societies is increasing."
                },
                {
                  "answerKey": "answer_2",
                  "content": "The rewards received by many white-collar workers in capitalist societies are no different from those received by factory workers in Marx’s time."
                },
                {
                  "answerKey": "answer_3",
                  "content": "No advanced capitalist society has ever experienced a class revolution by the workers."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Many of the benefits enjoyed by workers in capitalist societies today came about as a result of class conflict."
                }
              ]
            },
            "answerKey": {
              "assessmentType": "multiplechoice",
              "answers": {
