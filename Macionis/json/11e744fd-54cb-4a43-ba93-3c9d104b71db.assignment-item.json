            "config": {
              "id": "QUE58192",
              "question": "Which of the following statements explains why social movements that are characteristic of industrial and postindustrial societies are seldom found in preindustrial societies?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Preindustrial societies are tightly bound by tradition."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Preindustrial societies have no issues with which they have to deal collectively."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Change is constant, and so preindustrial societies are used to change without having to create movements in support of or against an issue."
                },
                {
                  "answerKey": "answer_4",
                  "content": "In preindustrial societies, everyone thinks in a different way, making social movements irrelevant."
                }
              ]
            },
            "answerKey": {
              "assessmentType": "multiplechoice",
              "answers": {
                "answer_3": {
                  "score": 0.0,
