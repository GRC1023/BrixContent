            "config": {
              "id": "QUE62668",
              "question": "How did the population increase of the 20th century differ from the population increases of previous centuries?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "The rate of increase accelerated so much that the population actually quadrupled, whereas it had not even doubled in any other century."
                },
                {
                  "answerKey": "answer_2",
                  "content": "The population increase shifted from marked increases in poor countries to skyrocketing increases in wealthy countries."
                },
                {
                  "answerKey": "answer_3",
                  "content": "The population increase of the 20th century started tapering off and slowing down by the end of the 1900s, whereas in previous centuries it had picked up in the latter half of the century."
                },
                {
                  "answerKey": "answer_4",
                  "content": "The rate of population increase decelerated during the 20th century whereas it had accelerated during the previous centuries."
                }
              ]
            },
            "answerKey": {
