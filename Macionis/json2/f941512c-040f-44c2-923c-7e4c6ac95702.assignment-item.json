            "config": {
              "id": "QUE62584",
              "question": "What distinguishes a minority from a society’s majority?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "The minority has a distinct identity based on physical or biological traits, but the minority receives treatment equal to that of the majority."
                },
                {
                  "answerKey": "answer_2",
                  "content": "The minority has a distinct identity based on cultural or environmental traits, and the minority oppresses the majority."
                },
                {
                  "answerKey": "answer_3",
                  "content": "The minority has a distinct identity based on physical or cultural traits, and the minority experiences subordination."
                },
                {
                  "answerKey": "answer_4",
                  "content": "The minority has a distinct identity as the society’s elite, and the minority experiences material comfort."
                }
              ]
            },
            "answerKey": {
              "assessmentType": "multiplechoice",
              "answers": {
                "answer_3": {
                  "score": 1.0,
                  "response": ""
                },
