            "config": {
              "id": "QUE60509",
              "question": "Which of the following is a \n\u003ci\u003etrue\u003c/i\u003e statement regarding the use of fear appeals?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Fear appeals are more successful if you can convince the listeners that the threat is not real."
                },
                {
                  "answerKey": "answer_2",
                  "content": "A strong threat to a loved one tends to be more successful than a fear appeal directed at the audience members themselves."
                },
                {
                  "answerKey": "answer_3",
                  "content": "In general, decreasing the intensity of a fear appeal increases the chances than the fear appeal will be effective."
                },
                {
                  "answerKey": "answer_4",
                  "content": "Fear appeals are more successful when you can convince your listeners that you, as the speaker, have the power to make a change to reduce the fear-causing threat."
                }
              ]
            },
