            "bricType": "MultipleChoiceQuestion",
            "config": {
              "id": "QUE60265",
              "question": "Why should you write your preparation outline in complete sentences?\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "Because if you don’t, you will have trouble judging the coherence of the speech."
                },
                {
                  "answerKey": "answer_2",
                  "content": "Because you will use your preparation outline when you deliver your speech, and you want to make sure it is as thorough as possible."
                },
                {
                  "answerKey": "answer_3",
                  "content": "Because, by definition, your preparation outline is a word-for-word account of what you plan to say in your speech."
                },
                {
                  "answerKey": "answer_4",
                  "content": "You shouldn’t; you should only use complete sentences in your speaking notes."
                }
              ]
            },
