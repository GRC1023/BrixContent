            "config": {
              "id": "QUE58456",
              "question": "According to the guidelines set forth by the American Sociological Association, researchers must get the informed consent of participants. This means that ____________.\n\u003cbr /\u003e",
              "order": "randomized",
              "presenterType": "RadioGroup",
              "presenterConfig": {
                "numberFormat": "none"
              },
              "choices": [
                {
                  "answerKey": "answer_1",
                  "content": "after the study is completed, researchers must ask participants for the right to publish their data"
                },
                {
                  "answerKey": "answer_2",
                  "content": "subjects must understand the responsibilities and risks involved in the study and agree to take part"
                },
                {
                  "answerKey": "answer_3",
                  "content": "to minimize bias, subjects cannot be paid to participate in a study"
                },
                {
                  "answerKey": "answer_4",
                  "content": "people cannot participate in sociological research until they are twenty-one"
                }
              ]
            },
